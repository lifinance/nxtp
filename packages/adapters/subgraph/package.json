{
  "name": "@connext/nxtp-adapters-subgraph",
  "version": "0.2.0-beta.23",
  "description": "adapter for subgraph interaction of nxtp protocol",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "",
    "start": "",
    "lint": "eslint ./src --ext .ts --env node",
    "test": "nyc ts-mocha --check-leaks --exit --timeout 120000 './test/**/*.spec.ts'",
    "clean": "rimraf ./dist ./tsconfig.tsBuildInfo",
    "build": "tsc --build ./tsconfig.build.json",
    "build-client": "graphclient build --tsOnly",
    "verify": "yarn test && yarn clean && yarn build && yarn lint --max-warnings 0",
    "purge": "yarn clean && rimraf ./coverage ./node_modules",
    "tsp": "yarn run tsp:root \"$@\" --cwd $(pwd)",
    "graphiql": "graphclient serve-dev"
  },
  "nodemonConfig": {
    "exec": "node --enable-source-maps ./dist/index.js | pino-pretty",
    "delay": "500",
    "ext": "js,json",
    "watch": [
      ".env",
      "./dist"
    ]
  },
  "author": "Connext",
  "license": "ISC",
  "dependencies": {
    "@connext/nxtp-utils": "workspace:*",
    "@graphprotocol/client-cli": "2.2.8",
    "@graphql-mesh/transform-prefix": "0.11.77",
    "@graphql-mesh/transform-rename": "0.12.78",
    "@graphql-mesh/transform-type-merging": "0.4.32",
    "@sinclair/typebox": "0.24.39",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "ethers": "5.7.0",
    "graphql": "16.6.0",
    "graphql-request": "5.0.0",
    "graphql-tag": "2.12.6"
  },
  "devDependencies": {
    "eslint": "8.23.0",
    "nyc": "15.1.0",
    "ts-mocha": "10.0.0",
    "ts-node": "10.9.1",
    "tslib": "2.4.0",
    "typescript": "4.8.3"
  },
  "gitHead": "937a7cde93e6ac1e151c6374f48adf83d3fa4ec6",
  "stableVersion": ""
}
