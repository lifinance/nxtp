{
  "name": "@connext/nxtp-sdk-server",
  "description": "Client-side package server for interacting with the NXTP protocol for crosschain packages",
  "author": "Connext",
  "license": "UNLICENSED",
  "main": "index.js",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
