  },
  "keywords": [],
  "dependencies": {
    "@connext/nxtp-sdk": "workspace:*",
    "@connext/nxtp-txservice": "workspace:*",
    "@connext/nxtp-utils": "workspace:*",
    "@fastify/type-provider-typebox": "^2.3.0",
    "ethers": "5.7.0",
    "fastify": "4.5.3",
    "pino": "8.5.0"
  },
  "devDependencies": {
    "@types/node": "16.11.58",
    "@types/pino": "7.0.5",
    "pino-pretty": "9.1.0",
    "rimraf": "3.0.2",
    "typescript": "4.8.3"
  }
}
